<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/box_border_black" 
    android:layout_margin="5dp"
    android:paddingTop="2dp">

    
    <ImageView
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mountain"
        android:id="@+id/iv_mapCapture"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/tv_roomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10sp"
        android:text="모여라~"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10sp"
        android:text="서울 특별시 동작구"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/tv_startEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10sp"
        android:text="2022.3.18  13:36 ~ 2022.3.18  18:00"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/tv_sharingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10sp"
        android:text="소요 시간 : 4시간 23분"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_peopleNum"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:paddingBottom="5sp"
            android:text="참여자(4명)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn_showList"
            android:layout_marginEnd="10dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="리스트보기"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#CFCECE" />
    </LinearLayout>

</LinearLayout>